module Workspace

name = "Workspace Configuration"
owner = "Joni Appleseed"
version = ""

class Repo {
	name: String
	repo: String
	version: String?
	branch: String = "main"
	docs: String?
}

class Tool {
	name: String
	install: String
	docs: String?
}

Projects {
	new Repo { 
		name = "Project Alpha"
		repo = "https://github.com/orchard/project-alpha"
	}
}

Packages {
	new Repo { 
		name = "LaunchPackage"
		repo = "https://github.com/orchard/launch-package"
	}
}

ThirdParty {
	new Repo { 
		name = "swift-uuidev7"
		repo = "https://github.com/mhayes853/swift-uuidv7.git"
		version = "0.1.0"
		docs = "https://swiftpackageindex.com/mhayes853/swift-uuidv7/main/documentation/uuidv7"
	}
}


Tools {
	new Tool {
		name = "pkl"
		install = "brew install pkl"
		docs = "https://pkl-lang.org/main/current/index.html"
	}
	new Tool {
		name = "jq"
		install = "brew install jq"
		docs = "https://jqlang.org/manual"
	}
	new Tool {
		name = "tuist"
		install = "brew install tuist"
		docs = "https://docs.tuist.dev/en/"
	}
}
